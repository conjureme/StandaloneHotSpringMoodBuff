    <PlatformTarget>x64</PlatformTarget>

    <RootNamespace>StandaloneHotSpringMoodBuff</RootNamespace>
    <AssemblyName>StandaloneHotSpringMoodBuff</AssemblyName>
    <OutputPath>../1.6/Assemblies</OutputPath>
    <VersionPrefix>1.0.0</VersionPrefix>

    <DebugType>none</DebugType>
    <DebugSymbols>false</DebugSymbols>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>

    <RimWorldPath Condition="'$(RimWorldPath)' == '' AND '$(OS)' == 'Windows_NT'">../../../RimWorldWin64_Data/Managed</RimWorldPath>
