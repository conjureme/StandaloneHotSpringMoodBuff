    </Reference>

    <Reference Include="../../../../../../steamapps/workshop/content/294100/2009463077/Current/Assemblies/0Harmony.dll">
      <Private>False</Private>
    </Reference>

    <Reference Include="../../../../../../steamapps/workshop/content/294100/2205980094/1.6/Assemblies/StandaloneHotSpring.dll">
      <Private>False</Private>
    </Reference>
  </ItemGroup>
</Project>